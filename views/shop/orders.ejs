    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(orders.length > 0) {%>
            <ul>
                <% for( order of orders) {%>
                    <li>
                        <h1># <%= order._id %></h1>
                        <h2>User: <%= order.userId.name %></h2>
                    <ul>
                    <% for( item of order.products ) {%>
                    <li><%= item.title %> (<%= item.quantity %>)</li>
                    <%}%>
                    <h3>Total: <%= order.total %></h3>
                    </ul>
                </li>
                <% } %>
            </ul>
            <%} else {%>
            <h1>Nothing there!</h1>
            <%}%>
        </main>
        <%- include('../includes/end.ejs') %>