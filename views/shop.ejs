<%- include('includes/head') %>

  </head>

  <body>
<%- include('includes/navigate') %>

    <main>
      <% if(prods.length > 0) {%>
      <div class="grid">
        <% for(let prod of prods) {%>
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= prod.title %></h1>
          </header>
          <section class="card__image">
            <img
              src="images/blue-book-emoji-clipart-md.png"
              alt="A Book"
              title="Author: JoyPexels @ Creazilla"
            />
          </section>
          <section class="card__content">
            <h2 class="product__price">$19.99</h2>
            <p class="product__description">
              A very interesting book on how to sleepwalk while you work out.
            </p>
          </section>
          <section class="card__actions">
            <button class="btn">Add to cart</button>
          </section>
        </article>
        <%}%>
      </div>
      <%} else {%>
      <h1>My Products</h1>
      <p>List of all the products...</p>
      <%}%>
    </main>

<%- include('includes/end') %>
